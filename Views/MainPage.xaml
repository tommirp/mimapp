<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MimApp.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:dxe="clr-namespace:DevExpress.Maui.Editors;assembly=DevExpress.Maui.Editors"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:MimApp.ViewModels"
    x:DataType="vm:MainViewModel"
    BackgroundColor="White">

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="#008859" StatusBarStyle="LightContent" />
    </ContentPage.Behaviors>

    <StackLayout>
        <Grid Margin="0">
            <StackLayout
                Padding="0"
                HorizontalOptions="Center"
                Orientation="Horizontal">
                <Image
                    Aspect="Fill"
                    HorizontalOptions="FillAndExpand"
                    Source="homeheader.png"
                    VerticalOptions="Start" />
            </StackLayout>
            <Border
                Margin="0,20,20,0"
                Padding="0"
                HorizontalOptions="End"
                Stroke="Black"
                VerticalOptions="Start">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <Grid>
                    <Image
                        Margin="5"
                        HorizontalOptions="Start"
                        Source="location.png"
                        WidthRequest="14" />
                    <Label
                        Margin="25,5,10,0"
                        FontSize="11"
                        HorizontalOptions="End"
                        LineBreakMode="TailTruncation"
                        MaxLines="1"
                        MaximumWidthRequest="90"
                        Text="Pekanbaru, Riau"
                        TextColor="Black" />
                </Grid>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToCitySelectionCommand}" />
                </Border.GestureRecognizers>
            </Border>
        </Grid>
        <VerticalStackLayout Margin="0,-60,0,0">
            <Label HorizontalOptions="CenterAndExpand" Text="Aplikasi Untuk Semua Muslim" />
            <dxe:TextEdit
                x:Name="SearchBar"
                Margin="30"
                BackgroundColor="#f1f2f6"
                BorderColor="#f1f2f6"
                BorderThickness="1"
                BoxPadding="15"
                CornerRadius="10"
                EndIcon="search_small.png"
                EndIconCommand="{Binding SearchQuranCommand}"
                FocusedBorderThickness="0"
                HeightRequest="45"
                HorizontalOptions="FillAndExpand"
                PlaceholderColor="#a4b0be"
                PlaceholderText="Cari Surat:Ayat / Keyword"
                Text="{Binding SearchText}"
                TextFontSize="14" />
        </VerticalStackLayout>
    </StackLayout>
</ContentPage>
