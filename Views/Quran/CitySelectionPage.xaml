<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MimApp.Views.Quran.CitySelectionPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:dxe="clr-namespace:DevExpress.Maui.Editors;assembly=DevExpress.Maui.Editors"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="Pilih Area">

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="#008859" StatusBarStyle="LightContent" />
    </ContentPage.Behaviors>

    <StackLayout>
        <dxe:TextEdit
            x:Name="SearchBar"
            Margin="30"
            BackgroundColor="#f1f2f6"
            BorderColor="#f1f2f6"
            BorderThickness="1"
            BoxPadding="15"
            CornerRadius="10"
            EndIcon="search_small.png"
            EndIconCommand="{Binding SearchCityCommand}"
            FocusedBorderThickness="0"
            HeightRequest="45"
            HorizontalOptions="FillAndExpand"
            PlaceholderColor="#a4b0be"
            PlaceholderText="Cari Nama Kota by Keyword"
            Text="{Binding SearchTextCity}"
            TextFontSize="14" />
        <Border HeightRequest="1" Stroke="LightGray" />
        <CollectionView ItemsSource="{Binding CityCodeList}" VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border
                        Margin="0"
                        BackgroundColor="White"
                        StrokeThickness="0">
                        <StackLayout>
                            <Label
                                Padding="25,15,25,15"
                                FontSize="Small"
                                Text="{Binding .}"
                                TextColor="black" />
                            <Border HeightRequest="1" Stroke="LightGray" />
                            <Button
                                Command="{Binding BindingContext.OnTapCityCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                CommandParameter="{Binding}"
                                Text="Tap Me" />
                        </StackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>

</ContentPage>