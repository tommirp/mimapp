<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MimApp.Views.Quran.CitySelectionPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="Lokasi">

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="#008859" StatusBarStyle="LightContent" />
        <toolkit:EventToCommandBehavior Command="{Binding InitPageCommand}" EventName="Appearing" />
    </ContentPage.Behaviors>

    <RefreshView
        Grid.Row="1"
        Command="{Binding InitPageCommand}"
        IsRefreshing="{Binding IsRefreshing}">
        <CollectionView
            Grid.ColumnSpan="2"
            BackgroundColor="Transparent"
            ItemsSource="{Binding CityCodesList}"
            SelectionMode="None">
            <CollectionView.EmptyView>
                <StackLayout
                    HeightRequest="200"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    WidthRequest="200">
                    <Label
                        FontSize="Large"
                        HorizontalOptions="Center"
                        Text="No data available"
                        TextColor="Gray"
                        VerticalOptions="Center" />
                </StackLayout>
            </CollectionView.EmptyView>
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="{OnIdiom Default=1, Desktop=3}" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="0" ColumnDefinitions="Auto">
                        <VerticalStackLayout
                            Grid.Column="2"
                            Padding="5"
                            VerticalOptions="Start">
                            <Label
                                FontAttributes="Bold"
                                Text="{Binding Lokasi}"
                                TextColor="black" />
                        </VerticalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>